{
  "name": "gypstore",
  "version": 2,
  "public": true,
  "builds": [
    { "src": "frontend/next.config.js", "use": "@now/next" },
    {
      "src": "./admin/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/admin/(.*)", "dest": "/admin/index.html" },
    { "src": "/(.*)", "dest": "/frontend/$1", "continue": true }
  ]
}
