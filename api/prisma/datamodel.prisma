type User {
  id: ID! @id
  type: String
  name: String!
  email: String! @unique
  password: String!
  phone: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  shoppingCart: ShoppingCart!
  quotations: [Quotation!]
  payments: [Payment!]
  addresses: [Address]
}

type Address {
  id: ID! @id
  name: String!
  Address: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  customer: User! @relation(link: INLINE)
  invoices: [Invoice]
  shipping: [Shipping]

}

type Payment {
  id: ID! @id
  docId: String!
  amount: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  customer: User! @relation(link: INLINE)
  saleman: Saleman! @relation(link: INLINE)
  quotation: Quotation! @relation(link: INLINE)
  Invoice: Invoice 

}

type Saleman {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  payments: [Payment]
  invoices: [Invoice]
  quotations: [Quotation]

}

type Invoice {
  id: ID! @id
  docId: String!
  creditTerm: String!

  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User! @relation(link: INLINE)
  quotation: Quotation! @relation(link: INLINE)
  saleman: Saleman! @relation(link: INLINE)
  address: Address @relation(link: INLINE)
  payment: Payment @relation(link: INLINE)

}

type Shipping {
  id: ID! @id
  docId: String!
  dueDate: DateTime!
  status: String!

  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  invoce: Invoice! @relation(link: INLINE)
  address: Address! @relation(link: INLINE)
  quotation: Quotation! @relation(link: INLINE)

}

type Category {
  id: ID! @id
  name: String!

  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  productItem: [ProductItem]
  category: Category @relation(link: INLINE)

}

type ProductItem {
  id: ID! @id
  name: String!
  price: String!
  salePrice: String!
  brand: String!
  unitType: String!
  description: String
  MenuDetail: String!
  TermDetail: String!
  amount: Int!
  isPublished: Boolean! @default(value: true)

  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  category: Category! @relation(link: INLINE)
  shoppingCart: ShoppingCart @relation(link: INLINE)
  quotation: Quotation @relation(link: INLINE)
  image: String
  relatedProduct: [ProductItem] @relation(Link: INLINE)

}

type ShoppingCartItem {
  id: ID! @id
  key: String! @unique
  product: ProductItem!
  amount: Int!
  ShoppingCart: ShoppingCart @relation(link: INLINE)
}

type ShoppingCart {
  id: ID! @id
  total_cost: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  productItems: [ShoppingCartItem]
  customer: User! @relation(link: INLINE)

}


type Quotation {
  id: ID! @id
  docId: String!
  productItems: [ProductItem!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  saleman: Saleman! @relation(link: INLINE)
  payment: Payment 
  shipping: Shipping 
  customer: User! @relation(link: INLINE)

}


